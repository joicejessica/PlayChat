<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bghome"
    android:orientation="horizontal"
    tools:context="id.sch.smktelkom_mlg.project2.xirpl609101415.playchat.HomeActivity">

    <Button
        android:id="@+id/bChat"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_above="@+id/bPlay"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:background="@drawable/chatting" />

    <Button
        android:id="@+id/bPlay"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/bChat"
        android:layout_centerVertical="true"
        android:background="@drawable/game" />

    <Button
        android:id="@+id/bAboutUs"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/bPlay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:background="@drawable/aboutUS" />

</RelativeLayout>
